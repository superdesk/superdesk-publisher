{
    "files": [
        "index.js"
    ],
    "include": [
        "client",
        "publisher-extension",
    ],
    "exclude": [
        "node_modules", 
        "client/__mocks__/*.*"
    ],
    "compilerOptions": {
        "baseUrl": "client",
        "skipLibCheck": true,
        "allowJs": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es2017",
            "es2018.promise"
        ],
        "jsx": "react",
    }
}
